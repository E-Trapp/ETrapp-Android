<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_user_sign_up_button"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/create_event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_title"
            android:inputType="text"
            android:maxLines="1" />

        <EditText
            android:id="@+id/create_event_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_description"
            android:inputType="text" />

        <EditText
            android:id="@+id/create_event_datetime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_start_date"
            android:inputType="datetime"
            android:maxLines="1" />

        <EditText
            android:id="@+id/create_event_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_image"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <Button
        android:id="@+id/new_user_sign_up_button"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:background="@color/md_amber500"
        android:text="@string/sign_up"
        android:textColor="@color/md_white" />
</RelativeLayout>